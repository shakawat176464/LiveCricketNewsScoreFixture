<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/flagNum_1_imageViewId"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/flagNum_2_imageView_Id"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/teamNameTxt_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bangladesh Vs India"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/matchFormatTxt_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teamNameTxt_Id"
            android:layout_centerHorizontal="true"
            android:text="3rd ODI"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/dateTimeTextView_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchFormatTxt_Id"
            android:layout_centerHorizontal="true"
            android:text="30/10/2018, 10.00AM"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/matchStatusTxt_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTimeTextView_Id"
            android:layout_centerHorizontal="true"
            android:text="Finish"
            android:textStyle="bold"
            android:textColor="@color/liveColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/matchResultTxt_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchStatusTxt_Id"
            android:layout_centerHorizontal="true"
            android:text="Ban win by 37 run and remaning 20 balls"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/stadiumNameTextView_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchResultTxt_Id"
            android:layout_centerHorizontal="true"
            android:text="@string/stadium_name"
            android:textSize="14dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>