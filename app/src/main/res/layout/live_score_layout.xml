<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMatchLiveStremingId"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/liveColor"
            android:gravity="center"
            android:text="Match Live Streming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:cardElevation="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtMatchNameId"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="India Vs Bangladesh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTeam1Id"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="IND-211/10(46.3)"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTeam2Id"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="BAN-211/10(46.3)"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtResultId"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:padding="4dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="BAN need 10 run to win from 21 balls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:cardElevation="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="4dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Batsman :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtBatsman1Id"
                android:padding="4dp"
                android:textSize="15sp"
                android:text="Tamim(66run/36ball)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtBatsman2Id"
                android:padding="4dp"
                android:textSize="15sp"
                android:text="Shakib(46run/20ball)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        app:cardElevation="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="4dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Baller :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtBallar1Id"
                android:padding="4dp"
                android:textSize="15sp"
                android:text="Bumra(4.2-38-3)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtBallar2Id"
                android:padding="4dp"
                android:textSize="15sp"
                android:text="Jadeja(3.5-24-3)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>